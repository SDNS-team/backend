{
  "root": "apps/friend",
  "sourceRoot": "apps/friend/src",
  "projectType": "application",
  "targets": {
    "deploy": {
      "builder": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "nx build friend",
          "npx prisma generate --schema=./apps/friend/prisma/schema.prisma",
          "docker build --platform linux/amd64 --no-cache --progress=plain -t birthdayapp_development_friend -f ./apps/friend/Dockerfile ."
        ],
        "parallel": false
      }
    },
    "build": {
      "executor": "@nrwl/node:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/friend",
        "main": "apps/friend/src/main.ts",
        "tsConfig": "apps/friend/tsconfig.app.json"
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/friend/src/environments/environment.ts",
              "with": "apps/friend/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "friend:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/friend/**/*.ts"],
        "fix": true
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/friend"],
      "options": {
        "jestConfig": "apps/friend/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
